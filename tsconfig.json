{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"lib": ["es2017", "dom"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"types": ["jest", "node"]
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules"]
}
